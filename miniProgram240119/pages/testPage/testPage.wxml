<view class="container">
  <form bindsubmit="submitForm">

    <view class="form-item">
      <label for="title" class="form-label">商品名称:</label>
      <input name="title" type="text" placeholder="请输入商品名称" class="form-input"/>
    </view>


    <view class="form-item">
      <t-textarea
        name="description"
        t-class="external-class"
        placeholder="请输入商品描述"
        maxlength="200"
        disableDefaultPadding="{{true}}"
        indicator
      />
    </view>



    <view class="form-item">
        <t-cell title="商品类别" note="{{note}}" bind:click="showCascader" arrow></t-cell>
        <t-cascader
          class="demo"
          visible="{{visible}}"
          theme="tab"
          keys="{{keys}}"
          options="{{options}}"
          title="请选择类别"
          bind:change="onChange"
        ></t-cascader>

    </view>


<!--     <view class="form-item">
      <label for="condition" class="form-label">商品状况:</label>
      <picker name="condition" mode="selector" range="{{conditions}}" bindchange="pickerChange">
        <view class="picker">{{currentCondition}}</view>
      </picker>
    </view> -->


    <!-- 之后改成计算器形式 -->
    <view class="form-item">
      <t-input
        name="price"
        label="价格"
        placeholder="0.00"
        suffix="元"
        align="right"
        type="number"
        bindchange="onPriceInput"
        tips="{{priceError ? '请输入正确的价格' : ''}}"
        t-class-tips="tips"
      />
    </view>

    


    <view class="form-item">
      <label for="images" class="form-label">商品图片:</label>
      <button class="upload-btn" bindtap="chooseImage">选择图片</button>
      <view class="img-preview" wx:for="{{images}}" wx:key="index">
        <image src="{{item}}" mode="aspectFill"/>
      </view>
    </view>

<!--     <view class="form-item">
      <label for="location" class="form-label">所在地 (测试用):</label>
      <input name="location" type="text" placeholder="请输入所在地" class="form-input"/>
    </view>


    <view class="form-item">
      <label for="contact" class="form-label">用户id(测试用):</label>
      <input name="contact" type="text" placeholder="请输入用户ID" class="form-input"/>
    </view>
     -->
    <button formType="submit" class="submit-btn">发布商品</button>
  </form>
</view>