        <view class="picker">{{currentCondition}}</view>
      </picker>
    </view> -->


    <!-- 之后改成计算器形式 -->
    <view class="form-item">
      <t-input
        name="price"
        label="价格"
        placeholder="0.00"
        suffix="元"
        align="right"
        type="digitr"
        bindchange="onPriceInput"
        tips="{{priceError ? '请输入正确的价格' : ''}}"
        t-class-tips="tips"
      />
    </view>

    


    <view class="form-item">
        
    </view>

